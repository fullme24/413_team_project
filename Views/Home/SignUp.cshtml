@model IEnumerable<_413_team_project.Models.TimeSlot>

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SignUp</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Slot)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Slot)
                </td>
                <td>
                    <form asp-action="SignUp" method="post">
                        <input name="TimeSlotId" hidden value="@item.TimeSlotId" />
                        <button type="submit">
                            Select Time
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
